extends layout

append scripts
  script
    var config = {
      socketHost: '#{socketHost}',
      socketPort: '#{socketPort}'
    };

  script(src='/js/leap.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='/js/controller-ui.js')
  script(src='/js/rovctrlr-leap.js')
  script(src='/js/rovctrlr-keyboard.js')
  script(src='/js/main.js')

block content
  .row
    .col-span-6
      .ctrl-ui.well.well-large
        img.dim.ctrl-up(src="/img/arrow-up.png")
        img.dim.ctrl-down(src="/img/arrow-down.png")
        img.dim.ctrl-left(src="/img/arrow-left.png")
        img.dim.ctrl-right(src="/img/arrow-right.png")
        img.dim.ctrl-fwd(src="/img/arrow-fwd.png")
        img.dim.ctrl-back(src="/img/arrow-back.png")

      .ctrl-choose
        ul.list-inline
          li
            button.btn.btn-primary.leap
              | Leap Controller
          li
            button.btn.btn-primary.keyboard
              | Keyboard Controller
    .col-span-6
      p
        img(src="/img/shark.jpg")
